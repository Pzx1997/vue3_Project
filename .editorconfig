# http://editorconfig.org
# 告诉 EditorConfig 插件, 这是根文件，不用继续往上找
root = true

# 匹配所有文件
[*]
# 缩进风格, 可选 "space" "tab"
indent_style = tab
# 缩进的空格数
indent_size = 4
# 结尾换行符,可选 "If" "cr" "crIf"
end_of_line = lf
# 设置字符集
charset = utf-8
# 删除一行中的前后空格
trim_trailing_whitespace = true
# 在文件结尾插入新行
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
